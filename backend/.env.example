# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=mos
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:CHANGE_ME@localhost:5432/mos

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# LLM Backend Configuration
# Options: openai_api, claude_cli, ollama_cli
LLM_BACKEND=openai_api

# OpenAI API Configuration (required for openai_api backend)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LLM_MODEL=gpt-4o-mini

# Claude CLI Configuration (required for claude_cli backend)
# CLAUDE_CLI_PATH=claude

# Ollama Configuration (required for ollama_cli backend)
# OLLAMA_CLI_PATH=ollama
# OLLAMA_MODEL=llama2

# Prompt Version
PROMPT_VERSION=phase1-extract-v1

# Application Configuration
APP_BASE_URL=http://localhost:8000

# Timezone & Followup Schedule
TZ=Asia/Tokyo
FOLLOWUP_MORNING=09:00
FOLLOWUP_NOON=13:00
FOLLOWUP_EVENING=18:00

# Reminders & Notifications
REMINDER_SCAN_INTERVAL_MIN=10
RENDER_BATCH_SIZE=10

# External Notification Providers (optional)
# LINE Notify: https://notify-bot.line.me/
LINE_NOTIFY_TOKEN=

# Slack Incoming Webhooks: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Discord Webhooks: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# Webhook Verification Secrets (for receiving messages)
# LINE Messaging API Channel Secret
LINE_CHANNEL_SECRET=

# Slack Events API Signing Secret
SLACK_SIGNING_SECRET=

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
