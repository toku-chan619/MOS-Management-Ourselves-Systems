# Database Configuration (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mos
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/mos

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# LLM Backend Configuration
LLM_BACKEND=openai_api
OPENAI_API_KEY=xxxxx
LLM_MODEL=gpt-4o-mini
PROMPT_VERSION=phase1-extract-v1

# Application Configuration
APP_BASE_URL=http://localhost:8000

# Followup schedule (JST固定)
TZ=Asia/Tokyo
FOLLOWUP_MORNING=09:00
FOLLOWUP_NOON=13:00
FOLLOWUP_EVENING=18:00

# Reminders & Notifications
REMINDER_SCAN_INTERVAL_MIN=10
RENDER_BATCH_SIZE=10

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
